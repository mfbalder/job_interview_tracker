<h3><%= job.status %></h1>

<table class='jobs_table'>
    <tr>
        <th>Company Name</th>
        <th>Role Name</th>
        <th>Status</th>
        <th>Referral</th>
        <th>Salary Minimum</th>
        <th>Salary Maximum</th>
        <th>Hourly Rate</th>
        <th>Job Posting URL</th>
        <th>Hiring Manager Name</th>
        <th>Hiring Manager Email</th>
    </tr>
    <tr>
        <td><%= link_to job.company_name, job_path(job) %></td>
        <td><%= job.role_name %></td>
        <td><%= job.status %></td>
        <td><%= job.referral %></td>
        <td><%= job.salary_min %></td>
        <td><%= job.salary_max %></td>
        <td><%= job.hourly_rate %></td>
        <td><%= job.url %></td>
        <td><%= job.hiring_manager_name %></td>
        <td><%= job.hiring_manager_email %></td>
    </tr>
</table>
